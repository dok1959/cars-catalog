{% extends 'base.html.twig' %}

{% block title %}Марка{% endblock %}

{% block body %}
    <h1>Марка</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ brand.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('brand_index') }}">Вернуться</a>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
        <a href="{{ path('brand_edit', {'id': brand.id}) }}">Редактировать</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('brand/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
