{% extends 'base.html.twig' %}

{% block title %}Марка{% endblock %}

{% block body %}
    <h1>Марка</h1>

    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Название</th>
            </tr>
        </thead>
        <tr>
            <td data-label="Id">{{ brand.id }}</td>
            <td data-label="Название">{{ brand.name }}</td>
        </tr>
        </tbody>
    </table>

    <div class="container">
        <div class="text-center">
            <a class="btn btn-primary"  href="{{ path('brand_index') }}">Вернуться</a>

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                <a class="btn btn-primary"  href="{{ path('brand_edit', {'id': brand.id}) }}">Редактировать</a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                {{ include('brand/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
