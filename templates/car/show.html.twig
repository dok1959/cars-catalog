{% extends 'base.html.twig' %}

{% block title %}Автомобиль{% endblock %}

{% block body %}
    <h2>Автомобиль</h2>

    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Марка</th>
                <th scope="col">Модель</th>
                <th scope="col">Положение руля</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td data-label="Id">{{ car.id }}</td>
                <td data-label="Марка">{{ car.getBrand().getName() }}</td>
                <td data-label="Модель">{{ car.getModel().getName() }}</td>
                <td data-label="Положение руля">{{ car.getModel().getSteeringPosition() }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container">
        <div class="text-center">
            <a class="btn btn-primary" href="{{ path('car_index') }}">Вернуться</a>

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                <a class="btn btn-primary" href="{{ path('car_edit', {'id': car.id}) }}">Редактировать</a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                {{ include('car/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}