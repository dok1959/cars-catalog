{% extends 'base.html.twig' %}

{% block title %}Автомобиль{% endblock %}

{% block body %}
    <h1>Автомобиль</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Марка</th>
                <td>{{ car.getBrand().getName() }}</td>
            </tr>
            <tr>
                <th>Модель</th>
                <td>{{ car.getModel().getName() }}</td>
            </tr>
            <tr>
                <th>Положение руля</th>
                <td>{{ car.getModel().getSteeringPosition() }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">Вернуться</a>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
        <a href="{{ path('car_edit', {'id': car.id}) }}">Редактировать</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('car/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
