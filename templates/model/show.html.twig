{% extends 'base.html.twig' %}

{% block title %}Модель{% endblock %}

{% block body %}
    <h1>Модель</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ model.name }}</td>
            </tr>
            <tr>
                <th>Положение руля</th>
                <td>{{ model.steeringPosition }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('model_index') }}">Вернуться</a>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
        <a href="{{ path('model_edit', {'id': model.id}) }}">Редактировать</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('model/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
